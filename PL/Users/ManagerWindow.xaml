<Window x:Class="PL.Users.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Users"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800"
        Icon="{StaticResource AppIcon}"
        ResizeMode ="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent">
    <Border CornerRadius="50" 
        Background="{StaticResource windowBackground}">

        <Border CornerRadius="20"  
            BorderThickness="5"
            Opacity="0.85"
            BorderBrush="{StaticResource BorderBrushKey}"
            Background="{StaticResource BackgroundBrushKey}">

            <Grid>
                <!--Go to the list of engineers-->
                <Button Content="Handle Engineers" HorizontalAlignment="Left" Margin="124,161,0,0" VerticalAlignment="Top" Click="BtnEngineerList_Click" RenderTransformOrigin="0.5,0.5" Background="#FFD78484" Height="85" Width="154" FontSize="18" FontWeight="Bold" Style="{StaticResource ButtonRoundKey}"/>
                <Button Content="Init DB" HorizontalAlignment="Left" Margin="550,161,0,0" VerticalAlignment="Top" Click="BtnInitialization_Click" Height="85" Width="154" Background="#FFD78484" FontSize="18" FontWeight="Bold" Style="{StaticResource ButtonRoundKey}"/>
                <Button Content="Reset DB" HorizontalAlignment="Left" Margin="400,161,0,0" VerticalAlignment="Top" Click="BtnReset_Click" Background="#FFD78484" Height="85" Width="150" FontSize="18" FontWeight="Bold" Style="{StaticResource ButtonRoundKey}"/>
                <Button Content="Task Table" HorizontalAlignment="Left" Margin="128,288,0,0" VerticalAlignment="Top" Click="BtnTaskTable_Click" Background="#FFD78484" Height="85" Width="150" FontSize="18" FontWeight="Bold" Style="{StaticResource ButtonRoundKey}"/>
                <Button Content="Log In" 
                    BorderThickness="0"
                    Foreground="White"
                    FontFamily="Montserrant"
                    Cursor="Hand"
                    HorizontalAlignment="Left" 
                    Margin="400,288,0,0" 
                    VerticalAlignment="Top" 
                    Click="BtnTLogIn_Click" 
                    Height="85" Width="150" FontSize="18" 
                    FontWeight="Bold" 
                    Style="{StaticResource ButtonStyleKey}"
                    Template="{StaticResource ButtonTemplateKey}"/>
                <TextBlock HorizontalAlignment="Left" Margin="194,70,0,0" TextWrapping="Wrap" Text="project status:" VerticalAlignment="Top" Height="41" Width="131" FontSize="18" FontWeight="Bold"/>
                <Button Content="Gantt chart" HorizontalAlignment="Left" Margin="400,62,0,0" VerticalAlignment="Top" Height="58" Width="144" FontSize="20" FontWeight="Bold" Background="#FF3D82A3" Style="{StaticResource ButtonRoundKey}"/>


            </Grid>
        </Border>
    </Border>


    </Window>
