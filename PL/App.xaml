<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:ExperienceCollection x:Key="ExperienceCollectionKey"/>
        <local:EngineerExperienceCollection x:Key="EngineerExperienceCollectionKey"/>
        <local:ConvertIdToContent x:Key="ConverIdToContentKey"/>
        <local:ConvertIdToIsEnabled x:Key="ConvertIdToIsEnabledKey"/>
        <local:ConvertIdToVisibility x:Key="ConvertIdToVisibilityKey"/>
        <local:ConvertProjectStatusToVisibility x:Key="ConvertProjectStatusToVisibilityKey"/>
        <local:ConvertTaskInListIEnumerableToBool x:Key="ConvertTaskInListIEnumerableToBoolKey"/>
        <local:TaskFieldsToFilterCollection x:Key="TaskFieldsToFilterCollectionKey"/>
        <local:TaskStatusCollection x:Key="TaskStatusCollectionKey"/>
        

        <!--Background-->
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" x:Key ="BackgroundKey">
            <GradientStop Color="White"/>
            <GradientStop Color="#FF97DAEB" Offset="1"/>
        </LinearGradientBrush>

        <!--Button Style-->
        <Style TargetType="Button" x:Key ="ButtonRoundKey">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="8">
                            <!-- Set the CornerRadius to the desired value for rounded corners -->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Application.Resources>
</Application>
